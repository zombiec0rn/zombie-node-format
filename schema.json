{
	"title" : "Zombie Node Format",
	"type"  : "object",
	"properties" : {
		"hostname" : {
			"type"    : "string",
			"pattern" : "^/?[a-zA-Z0-9_-]+$"
		},
		"swarm" : {
			"type"    : "string",
			"pattern" : "^/?[a-zA-Z0-9_-]+$"
		},
		"engines" : {
			"type"  : "array",
			"items" : {
				"type"    : "string",
				"pattern" : "^\\w+:\\d+$"
			}
		},
		"tags" : {
			"type"  : "array",
			"items" : {
				"type"    : "string"
			}
		},
    "memory": {
      "type": "integer"
    },
    "cpus": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "speed": {
            "type": "integer"
          }
        }
      },
      "minItems": 1
    }
	},
	"required" : ["hostname", "memory", "cpus"]
}
